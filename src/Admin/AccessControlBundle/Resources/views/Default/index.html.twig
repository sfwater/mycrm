{% extends 'AdminConsoleBundle::page.html.twig' %}
{% block pageContent %}
<div class="alert alert-info alert-dismissible" role="alert">
	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
	<span aria-hidden="true">&times;</span>
	</button>
	为<strong>用户或者用户</strong>组设置可以访问的页面，只有设置的页面才能访问！
</div>
<div>
	<!-- Nav tabs -->
	<ul class="nav nav-tabs" role="tablist">
		<li role="presentation" class="active">
			<a href="#home" aria-controls="home" role="tab" data-toggle="tab">用户权限</a>
		</li>
		<li role="presentation">
			<a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">用户组权限</a>
		</li>
	</ul>

	<!-- Tab panes -->
	<div class="tab-content">
		<div role="tabpanel" class="tab-pane active" id="home">

			<div class="margin-top clearfix">
			<div class="searchForm pull-left">
			<form name="userForm" method="POST" action="" class="form-inline searchForm" id="searchForm">
				<div class="form-group"><label class="control-label" for="role_search_name">选择用户：</label><input type="text" id="role_search_name" name="role_search[name]" class="form-control ipt form-control" placeholder="ID、用户名、昵称" label="ID、用户名、昵称"></div>
			    <button type="submit" class="btn btn-default" id="btnSearch">显示权限</button>
			</form>
			</div>
			</div>
			<div class="topbar-nav-col clearfix margin-top">
				{% for k,routes in routes %}
				<!-- ngRepeat: category in col -->
				<div class="topbar-nav-item">
					<p class="topbar-nav-item-title ng-binding">{{ k }}</p>
					<ul>
						{% for r in routes %}
						<!-- ngRepeat: product in category.products -->
						<li> 
							<a href="javascript:void(0);" for="route_{{ r.name }}" data-toggle="tooltip" data-placement="right" title="{{ r.options.description }}">
								<input type="checkbox" value="{{ r.name }}" name="names[]" id="route_{{ r.name }}" />
								<span class="topbar-nav-item-icon icon-ecs"></span>
								<span class="ng-binding">{{ r.options.name }}</span>
								<span class="topbar-nav-item-short ng-binding"></span>
							</a>
						</li>
						{% endfor %}
					</ul>
					<!-- ngIf: $index < col.length -1 -->
					<div class="topbar-nav-gap ng-scope" ng-if="$index < col.length -1"></div>
					<!-- end ngIf: $index < col.length -1 -->
				</div>
				{% endfor %}
				<!-- end ngRepeat: category in col -->
			</div>
		</div>
		<div role="tabpanel" class="tab-pane" id="profile">
			<div class="margin-top clearfix">
			<div class="searchForm pull-left">
			<form name="userForm" method="POST" action="" class="form-inline searchForm" id="searchForm">
				<div class="form-group"><label class="control-label" for="role_search_name">选择用户组：</label><input type="text" id="role_search_name" name="role_search[name]" class="form-control ipt form-control" placeholder="组名" label="组名"></div>
			    <button type="submit" class="btn btn-default" id="btnGroupSearch">显示权限</button>
			</form>
			</div>
			</div>
			<div class="topbar-nav-col clearfix margin-top">
				{% for k,routes in routes %}
				<!-- ngRepeat: category in col -->
				<div class="topbar-nav-item">
					<p class="topbar-nav-item-title ng-binding">{{ k }}</p>
					<ul>
						{% for r in routes %}
						<!-- ngRepeat: product in category.products -->
						<li> 
							<a href="javascript:void(0);" for="route_{{ r.name }}" data-toggle="tooltip" data-placement="right" title="{{ r.options.description }}">
								<input type="checkbox" value="{{ r.name }}" name="names[]" id="route_{{ r.name }}" />
								<span class="topbar-nav-item-icon icon-ecs"></span>
								<span class="ng-binding">{{ r.options.name }}</span>
								<span class="topbar-nav-item-short ng-binding"></span>
							</a>
						</li>
						{% endfor %}
					</ul>
					<!-- ngIf: $index < col.length -1 -->
					<div class="topbar-nav-gap ng-scope" ng-if="$index < col.length -1"></div>
					<!-- end ngIf: $index < col.length -1 -->
				</div>
				{% endfor %}
				<!-- end ngRepeat: category in col -->
			</div>
		</div>
	</div>

</div>
{% endblock %}