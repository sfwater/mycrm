{% extends 'AdminConsoleBundle::page_list.html.twig' %}
{% block searchContent %}
{{ form_row(searchForm.name) }}
{% endblock %}
{% block tableHeader %}
	<th class="sortable" order-field="username">用户名</th>
	<th class="sortable" order-field="nickname">别名</th>
	<th>邮箱</th>
	<th>用户组</th>
	<th>过期时间</th>
	<th>注册时间</th>
	<th>激活</th>
{% endblock %}
{% block tableBody %}
	{% for entity in results %}
		<tr>
			<td>
			<td> <input type="checkbox" name="ids[]"  value="{{ role.id }}" /> </td>
			<td>{{ entity.username }}</td>
			<td>{{ entity.nickname }}</td>
			<td>{{ entity.email }}</td>
			<td>{{ entity.roles[0].name }}</td>
			<td>{{ entity.expireTime }}</td>
			<td>{{ entity.registerTime }}</td>
			<td>{{ entity.isActive }}</td>
            <td class="text-right">
            <a href="">编辑</a>
            </td>
		</tr>
	{% endfor %}
{% endblock %}
{% block tableAction %}
<button type="button" href="{{ path('admin_users_delete') }}" class="btn btn-default" target="selectedTodo" action="delete" method="DELETE" title="确定要禁用选中的用户吗？">批量禁用！</button>
{% endblock %}