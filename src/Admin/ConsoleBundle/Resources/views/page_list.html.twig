{% extends 'AdminConsoleBundle::page.html.twig' %}
{% block pageContent %}
<div class=" margin-top clearfix">
<div class="search-form pull-left">
    <form id="Domain_List_SearchForm" class="form-inline" action="/core/domain/list" method="post">
        
            <div class="form-group">
                <label class="control-label">域名类型：</label>
                <select id="domainType" name="domainType" class="select form-control">
                    <option selected="selected" value="0">全部</option>
                    <option value="1">国际域名</option>
                    <option value="2">国内域名</option>
                    
                    
                    <option value="5">网址</option>
                    <option value="6">微博域名</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">自定义分组：</label>
                <select id="orderGroupID" name="orderGroupID" class="select form-control inline-block">
                    <option value="" selected="selected">选择分组</option>
                    <optgroup label="-----------------">
	                    
                    </optgroup>
                    <optgroup label="-----------------">
                		<option value="">分组管理</option>
                	</optgroup>
                </select>
            </div>
        
            
                <div class="form-group">
                <label class="control-label">域名到期日期：</label>
                <input type="text" id="startDate" name="startDate" size="13" class="ipt form-control hasDatepicker"><span class="date-step-span">至</span>
                <input type="text" id="endDate" name="endDate" size="13" class="ipt form-control hasDatepicker">
               </div>
            
            <div class="form-group">
                <label class="control-label">域名：</label>
                <input id="relatedName" name="relatedName" type="text" size="30" placeholder="输入域名进行搜索" class="ipt form-control">
                
                <button type="button" class="btn btn-default" id="btnSearch">搜索</button>
            </div>
    <input type="hidden" name="_ww_csrf_token" value="791723d9-c9d9-4345-9803-da8b6e4bbcf7">
</form>
</div>
</div>
<div class="margin-top">
<table class="table table-hover">
	<thead> 
	<tr> 
	<th> <input type="checkbox" name="ckSelectAll" id="ckSelectAll"> </th>
	{% block tableHeader %}{% endblock %} 
	</tr> 
	</thead>
	<tbody>{% block tableBody %}{% endblock %}</tbody>
	<tfoot>
        <tr>
            <td width="10">
                <input type="checkbox" class="checkboxa-all" id="ckSelectAll2" name="ckSelectAll2">
            </td>
            <td colspan="100">
                <div class="pull-left">
                {% block tableAction %}
              	<button id="renew" type="button" class="btn btn-default" data-spm-click="gostr=/aliyun;locaid=d1">域名续费</button>
                {% endblock %}
                </div>
                <div class="pull-right page-box">
                    <div class="pagination-info">共有2条，每页显示：20条</div>
                    <ul class="pagination"><li class="disabled" page-index="1"><a>«</a></li><li class="disabled" page-index="0"><a>‹</a></li><li class="active" page-index="1"><a>1</a></li><li class="disabled" page-index="2"><a>›</a></li><li class="disabled" page-index="1"><a>»</a></li></ul>
                    <div class="pagination-goto">
                        <input type="text" class="ipt form-control" id="gotoPageNo">
                        <button type="button" class="btn btn-default" id="goBtn">GO</button>
                        <input type="hidden" id="totalCount" name="totalCount" value="2">
                    </div>
                </div>
            </td>
        </tr>
    </tfoot>
</table>
</div>
{% endblock %}