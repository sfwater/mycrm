{% extends 'AdminConsoleBundle::page_list.html.twig' %}
{% block searchContent %}
{{ form_row(searchForm.name) }}
{% endblock %}
{% block tableHeader %}
	<th class="sortable" order-field="name">组名</th>
	<th>用户组标识</th>
	<th>权限</th>
	<th>用户数</th>
{% endblock %}
{% block tableBody %}
	{% for entity in results %}
		<tr>
			<td> <input type="checkbox" name="ids[]"  value="{{ entity.id }}" /> </td>
			<td>{{ entity.name }}</td>
			<td>{{ entity.role }}</td>
			<td>{{ entity.mask| printUserMask }}</td>
			<td>{{ entity.users|length }}</td>
            <td class="text-right">
            <a href="{{ path('admin_entitys_edit',{id:entity.id}) }}" method="POST" title="编辑 {{ entity.name }}" target="dialog" width="500" height="600">编辑</a>
            </td>
		</tr>
	{% endfor %}
{% endblock %}
{% block tableAction %}
<button type="button" href="{{ path('admin_entitys_delete') }}" class="btn btn-default" target="selectedTodo" action="delete" method="DELETE" title="确定要删除选中的用户组吗？">批量删除！</button>
{% endblock %}